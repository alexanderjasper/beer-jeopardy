@model Oljeopardy.Models.JeopardyViewModels.CategoryViewModel
<h1>@ViewData["Title"]</h1>

<div class="row">
    <hr />
    <form asp-controller="Category" asp-action="SubmitCategory" method="post">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-xs-12">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

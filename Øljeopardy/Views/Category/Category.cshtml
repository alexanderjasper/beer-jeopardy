            <div class="row answer-question-container">
                <div class="col-xs-6">
                    <label asp-for="AnswerQuestion100.Answer"></label>
                </div>
                <div class="col-xs-5">
                    <label asp-for="AnswerQuestion100.Question"></label>
                </div>
            </div>
            <div class="row">
                100
            </div>
            <div class="row answer-question-container">
                <div class="col-xs-6">
                    <textarea asp-for="AnswerQuestion100.Answer" class="form-control answer-question-input" id="a1"></textarea>
                </div>
                <div class="col-xs-5">
                    <textarea asp-for="AnswerQuestion100.Question" class="form-control answer-question-input" id="q1"></textarea>
                </div>
                <div class="col-xs-1">
                    <table class="up-down-table">
                        <tr>
                            <td style="visibility: hidden;"><button type="button" class="fabutton" onclick="MoveAnswerQuestion(1,'up')"><i class="fa fa-sort-up fa-lg" aria-hidden="true"></i></button></td>
                        </tr>
                        <tr>
                            <td><button type="button" class="fabutton" onclick="MoveAnswerQuestion(1,'down')"><i class="fa fa-sort-down fa-lg" aria-hidden="true"></i></button></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="row">
                200

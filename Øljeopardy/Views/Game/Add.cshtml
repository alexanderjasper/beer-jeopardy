@model Oljeopardy.Models.JeopardyViewModels.AddGameViewModel
<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <form id="addGameForm">
        <div class="row">
            <div class="form-group">
                <div class="col-xs-12">
                    <label asp-for="GameName"></label>
                    <input asp-for="GameName" class="form-control" />
                </div>
                <div class="col-xs-12">
                    <select class="form-control" asp-for="ChosenCategoryGuid"
                            asp-items="@(new SelectList(Model.CategoryList, "Id", "Name"))" class="dropdown">
                        <option selected disabled>Vælg en kategori</option>
                    </select>
                </div>
                <input type="button" class="menubutton" value="Opret spil" onClick="completeAddGame()" />
            </div>
        </div>
    </form>
</div>
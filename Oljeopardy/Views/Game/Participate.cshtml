@model Oljeopardy.Models.JeopardyViewModels.ParticipateGameViewModel
<h1>@ViewData["Title"]</h1>

<div class="row">
    <hr />
    <form id="completeParticipationForm">
        <div class="row">
            <div class="form-group">
                <div class="col-xs-12">
                    <select class="form-control" asp-for="ChosenGameGuid"
                            asp-items="@(new SelectList(Model.GameList, "Id", "Name"))" class="dropdown">
                        <option selected disabled>Vælg et spil</option>
                    </select>
                </div>
                <div class="col-xs-12">
                    <select class="form-control" asp-for="ChosenCategoryGuid"
                            asp-items="@(new SelectList(Model.CategoryList, "Id", "Name"))" class="dropdown">
                        <option selected disabled>Vælg en kategori</option>
                    </select>
                </div>
            </div>
            <input type="button" class="menubutton" value="Deltag i spil" onClick="completeParticipation()" />
        </div>
    </form>
</div>